<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_4sdp"
        android:layout_marginLeft="@dimen/_4sdp"
        android:layout_marginRight="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_4sdp"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_product"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp"
                android:background="@color/colorWhite" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/colorGreyLight" />

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#18A43A"
                android:gravity="center"
                android:maxLines="2"
                android:padding="@dimen/_6sdp"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/tv_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0B683B"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/_6sdp"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_14sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/colorGreyLight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_add_to_basket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#075229"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="@dimen/_6sdp"
                    android:text="Add to Cart"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_14sdp" />

                <View
                    android:layout_width="0.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorGreyLight" />


                <TextView
                    android:id="@+id/tv_add_to_wishlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#075229"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="@dimen/_6sdp"
                    android:text="Add to WishList"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_14sdp" />


                <!--<TextView
                    android:id="@+id/tv_add_to_basket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:background="@drawable/background_grey_solid"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:text="Add to basket"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/tv_add_to_wishlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:background="@drawable/background_green_solid"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:text="Add to wishlist"
                    android:textColor="@color/colorWhite" />-->

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>